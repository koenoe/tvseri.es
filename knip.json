{
  "$schema": "https://unpkg.com/knip@5/schema.json",
  "exclude": ["duplicates"],
  "ignoreBinaries": ["only-allow"],
  "ignoreExportsUsedInFile": {
    "interface": true,
    "type": true
  },
  "ignoreWorkspaces": ["packages/typescript-config"],
  "workspaces": {
    ".": {
      "entry": ["infra/**/*.ts"]
    },
    "apps/api": {
      "entry": ["src/index.ts", "src/lambdas/*.ts"]
    },
    "apps/auth": {
      "entry": ["src/index.ts"]
    },
    "apps/dashboard": {
      "entry": ["src/routes/**/*.tsx"],
      "ignoreBinaries": ["vitest"]
    },
    "apps/web": {
      "ignoreDependencies": ["postcss-load-config"]
    },
    "packages/kill-switch": {
      "entry": [
        "disable-cloudfront-distributions/index.mjs!",
        "metrics-monitor/index.ts!"
      ]
    }
  }
}
